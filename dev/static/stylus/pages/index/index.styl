body
    font-family Gilroy Medium

.topMenu
    display flex
    justify-content center
    padding-top: 30px

nav
    display flex
    justify-content space-between
    width 65vw
    gap 8.6111rem
    a 
        font-size 18px
        font-family: Gilroy Bold
        color: #828282
        white-space nowrap
        &:hover
            color #070707

hr
    color #828282
    width 960px
    margin-top 32px

.intro
    display flex
    flex-direction row
    justify-content center
    color #070707

.intro_items
    display flex
    width 65vw
    flex-direction row
    justify-content space-between
    align-items flex-end
    margin-top 40px

.intro_item
    p
        white-space nowrap
        font-size 18px

#kek
    margin-left 47px

#rotate
    font-family Gilroy Bold
    writing-mode: vertical-rl
    transform rotate(180deg)
    font-size 16px

#name
    font-size 47px
    font-family Gilroy Bold
    margin-top -10px
.manImg
    display flex
    justify-content center
    margin-top 50px
    margin-bottom: 100px
    img
        width 65vw
.about
    padding 100px 0 100px 0
    display flex
    flex-direction column
    align-items center
    background #F6F6F6
h2
    margin 0 auto
    font-family Gilroy Bold
    font-size 34px
.about_items
    display flex
    flex-direction column
    align-items center
.about_item
    margin 20px 0 20px 0
    width 375px
.about_text
    text-align center
.skills
    padding 100px 0 100px 0
    display flex
    flex-direction column
    align-items center
.skills_text
    text-align center
    padding: 50px 0 10px 0
.skills_items
    padding 65px 0 30px 0
    display flex
    flex-direction center
    justify-content space-around
    gap 4rem
.skills_item
    display flex
