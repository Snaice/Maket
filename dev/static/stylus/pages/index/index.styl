body
    font-family Gilroy Medium

.topMenu
    display flex
    justify-content center
    padding-top: 30px

nav
    display flex
    justify-content space-between
    width 65vw
    gap 8.6111rem
    a 
        font-size 18px
        font-family: Gilroy Bold
        color: #828282
        white-space nowrap
        &:hover
            color #070707

hr
    color #828282
    width 960px
    margin-top 32px

.intro
    display flex
    flex-direction row
    justify-content center
    color #070707

.intro_items
    display flex
    width 65vw
    flex-direction row
    justify-content space-between
    align-items flex-end
    margin-top 40px

.intro_item
    p
        white-space nowrap
        font-size 18px

#kek
    margin-left 47px

#rotate
    font-family Gilroy Bold
    writing-mode: vertical-rl
    transform rotate(180deg)
    font-size 16px

#name
    font-size 47px
    font-family Gilroy Bold
    margin-top -10px
.manImg
    display flex
    justify-content center
    margin-top 50px
    img
        width 65vw